<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JuegoTapaPantalla">

    <TextView
        android:id="@+id/txt_titulo_tapa_pantalla"
        android:gravity="center"
        android:layout_width="277dp"
        android:layout_height="63dp"
        android:text="@string/txt_titulo_tapa_pantalla"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.092" />

    <TextView
        android:id="@+id/txtTutorial"
        android:layout_width="278dp"
        android:layout_height="117dp"
        android:text="@string/txt_tutorial_tapa_pantalla"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_titulo_tapa_pantalla"
        app:layout_constraintVertical_bias="0.085" />

    <Button
        android:id="@+id/btnIniTapaPantalla"
        android:layout_width="268dp"
        android:layout_height="50dp"
        android:text="@string/txt_ini_juego"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTutorial"
        app:layout_constraintVertical_bias="0.178" />

    <EditText
        android:id="@+id/txtPredSeg"
        android:layout_width="265dp"
        android:layout_height="44dp"
        android:ems="10"
        android:hint="@string/txt_hint_segundos"
        android:inputType="number"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnIniTapaPantalla"
        app:layout_constraintVertical_bias="0.212"
        tools:numeric="integer" />

    <Button
        android:id="@+id/btnRespuesta"
        android:layout_width="265dp"
        android:layout_height="49dp"
        android:text="@string/txt_resultado_juego"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.431"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPredSeg"
        app:layout_constraintVertical_bias="0.477" />
</androidx.constraintlayout.widget.ConstraintLayout>